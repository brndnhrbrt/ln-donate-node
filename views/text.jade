doctype html
html(lang='en')
  head
    title Invoice
    style(type='text/css').
        body {
            margin: 0px;
        }
        .lnd-copy-input {
            height: 35px;
            width: 200px;
            margin: 0px;
            font-family:Arial;
            font-size:13px;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .lnd-copy-button {
            margin-left: 5px;
            -moz-box-shadow: 0px 1px 0px 0px #fff6af;
            -webkit-box-shadow: 0px 1px 0px 0px #fff6af;
            box-shadow: 0px 1px 0px 0px #fff6af;
            background-color:#ffec64;
            -moz-border-radius:9px;
            -webkit-border-radius:9px;
            border-radius:9px;
            display:inline-block;
            cursor:pointer;
            color:#333333;
            font-family:Arial;
            font-size:13px;
            font-weight:bold;
            padding:6px 13px;
            text-decoration:none;
            text-shadow:0px 1px 0px #ffee66;
        }
        .lnd-copy-button:hover {
            background-color:#ffab23;
        }
        .lnd-copy-button:active {
            position:relative;
            top:1px;
        }
    script(type='text/javascript').
      function myFunction() {
        var copyText = document.getElementById("myInput");
        copyText.select();
        document.execCommand("copy");
      }
  body
    input#myInput(type='text', value='#{message}' class='lnd-copy-input')
    button(onclick='myFunction()' class='lnd-copy-button')
         img(src='data:image/svg+xml;utf8;base64,')